public class WeekDays {

    public static void main(String[] args) {

        //create an array with all 7 days of the week
        String[] weekDays = {"Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"};
        
        //Print the 7 days, each day on a new line
        System.out.println("All 7 days of the week:");
        for (int i = 0; i < weekDays.length; i++) {
            System.out.println(weekDays[i]);
        }
        
        System.out.println();
        
        //create a new array with a max size of 5 weekdays
        String[] weekDaysOnly = new String[5];
        
        //copy the first 5 days (Monday through Friday) to the new array
        for (int i = 0; i < 5; i++) {
            weekDaysOnly[i] = weekDays[i];
        }
        
        //Print first 5 weekdays only, each day on a new line
        System.out.println("Weekdays only (resized to 5):");
        for (int i = 0; i < weekDaysOnly.length; i++) {
            System.out.println(weekDaysOnly[i]);
        }
        
        System.out.println();
        //shuffle the first 5 days of the week using shuffle class
        System.out.println("Shuffled weekdays:");
        shuffle(weekDaysOnly);
        for (int i = 0; i < weekDaysOnly.length; i++) {
            System.out.println(weekDaysOnly[i]);
        }
    }
    
        //create a shuffle class
    public static void shuffle(String[] array) {
        //start from the last element and swap with a random element
        for (int i = array.length - 1; i > 0; i--) {
            //generate a random index from 0 to i
            int randomIndex = (int)(Math.random() * (i + 1));
            
            //swap elements at i and randomIndex
            String temp = array[i];
            array[i] = array[randomIndex];
            array[randomIndex] = temp;
        }
    }
}
