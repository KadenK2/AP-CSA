public class DeckOfCards {

    public static void main(String[] args) {
            //create the 2D array with 4 suits and 13 cards
        String[][] deckOfCards = new String[4][13];
        //define individual values for suits
        String[] suits = {"Diamonds", "Hearts", "Clubs", "Spades"};
        //define values for cards
        String[] ranks = {"Ace", "2", "3", "4", "5", "6", "7", "8", "9", "10", "Jack", "Queen", "King"};
        
        //load the deck with card values
        for (int row = 0; row < deckOfCards.length; row++)
            for (int col = 0; col < deckOfCards[row].length; col++)
                deckOfCards[row][col] = ranks[col] + " of " + suits[row];
        
        //print the complete deck
        System.out.println("Original Deck:");
        for (int row = 0; row < deckOfCards.length; row++)
        {
            for (int col = 0; col < deckOfCards[row].length; col++)
                System.out.print(deckOfCards[row][col] + "\t");
            System.out.println();
        }
        //line that says the deck is being shuffled
        System.out.println("\n --Shuffling Deck-- \n");
        
        //use the shuffle class to shuffle the deck
        shuffleDeck(deckOfCards);
        
        //deal 4 hands of 5 cards each. use the deal hands class
        System.out.println("Dealing 4 hands of 5 cards:\n");
        dealHands(deckOfCards, suits);
    }
    

    //shuffle class. shuffle the 2D array deck of cards by swapping random positions
    public static void shuffleDeck(String[][] deck)
    {
        //perform multiple random swaps to shuffle the deck
        for (int i = 0; i < 100; i++)
        {
            //generate random positions for first card
            int row1 = (int)(Math.random() * deck.length);
            int col1 = (int)(Math.random() * deck[row1].length);
            
            //generate random positions for second card
            int row2 = (int)(Math.random() * deck.length);
            int col2 = (int)(Math.random() * deck[row2].length);
            
            //swap the two cards to randomize every card
            String temp = deck[row1][col1];
            deck[row1][col1] = deck[row2][col2];
            deck[row2][col2] = temp;
        }
    }
    
        //deal class to create 4 hands of 5 cards
    public static void dealHands(String[][] deck, String[] suits)
    {
        //track which cards have been dealt
        boolean[][] dealt = new boolean[4][13];
        
        //deal 4 differnt hands
        for (int hand = 0; hand < 4; hand++)
        {
            System.out.println("Hand " + (hand + 1) + ":");
            int cardsDealt = 0;
            
            //deal 5 random cards for this hand
            for (int row = 0; row < deck.length && cardsDealt < 5; row++)
            {
                for (int col = 0; col < deck[row].length && cardsDealt < 5; col++)
                {
                    //make sure that no repeating cards get dealt
                    if (!dealt[row][col])
                    {
                        System.out.println("  " + deck[row][col]);
                        dealt[row][col] = true;
                        cardsDealt++;
                    }
                }
            }
            System.out.println();
        }
    }
}


    
